<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_graph"
    app:startDestination="@id/parentProfileFragment">

    <fragment
        android:id="@+id/parentProfileFragment"
        android:name="ch.bbbaden.choreapp.parent.ParentProfileFragment"
        android:label="fragment_parent_profile"
        tools:layout="@layout/fragment_parent_profile">
        <argument
            android:name="user"
            android:defaultValue="@null"
            app:argType="ch.bbbaden.choreapp.models.Parent"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/parentChoresFragment"
        android:name="ch.bbbaden.choreapp.parent.chore.ParentChoresFragment"
        android:label="fragment_parent_chores"
        tools:layout="@layout/fragment_parent_chores">
        <argument
            android:name="user"
            android:defaultValue="@null"
            app:argType="ch.bbbaden.choreapp.models.Parent"
            app:nullable="true" />
    </fragment>
</navigation>